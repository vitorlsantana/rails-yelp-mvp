<div class="container">
  <h1>Restaurantes</h1>

  <p>
    <%= link_to 'Adicionar', new_restaurant_path, class: "btn btn-primary" %>
  </p>

  <table class="table">
    <thead>
      <tr>
        <th>Nome</th>
        <th>Endereço</th>
        <th>Telefone</th>
        <th>Categoria</th>
        <th>Rating</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @restaurants.each do |restaurant| %>
        <tr>
          <td><%= restaurant.name %></td>
          <td><%= restaurant.address %></td>
          <td><%= restaurant.phone_number %></td>
          <td><%= restaurant.category %></td>
          <td></td>
          <td><%= link_to 'Mostrar', restaurant, class: "btn btn-primary"%></td>
          <td><%= link_to 'Apagar', restaurant, method: :delete, data: { confirm: 'Você tem certeza?' }, class: "btn btn-primary"%></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
